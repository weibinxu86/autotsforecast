# Manifest for source distribution
include README.md
include LICENSE
include CHANGELOG.md
include INSTALL.md
include QUICKSTART.md
include API_REFERENCE.md
include PARAMETER_GUIDE.md
include TECHNICAL_DOCUMENTATION.md

recursive-include src *.py

prune tests
prune examples
prune .pytest_cache
prune build
prune dist

global-exclude *.egg-info

global-exclude __pycache__
global-exclude *.py[co]
global-exclude *.backup
global-exclude .DS_Store
